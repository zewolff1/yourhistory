  <script>
    const chartData = [
      { year: '1929', value: 3.2, event: 'Market crash' },
      { year: '1930', value: 8.7, event: 'Smoot-Hawley' },
      { year: '1931', value: 15.9, event: 'Dust Bowl' },
      { year: '1932', value: 23.6, event: "Hoover's tax hikes" },
      { year: '1933', value: 24.9, event: "FDR's New Deal" },
      { year: '1934', value: 21.7, event: 'Depression eased' },
      { year: '1935', value: 20.1, event: 'N/A' },
      { year: '1936', value: 16.9, event: 'N/A' },
      { year: '1937', value: 14.3, event: 'Spending cuts' },
      { year: '1938', value: 19.0, event: 'FLSA started minimum wage' },
      { year: '1939', value: 17.2, event: 'Drought ended' },
      { year: '1940', value: 14.6, event: 'U.S. draft' },
      { year: '1941', value: 9.9, event: 'Pearl Harbor' },
      { year: '1942', value: 4.7, event: 'Defense spending tripled' },
      { year: '1943', value: 1.9, event: 'Germany surrendered at Stalingrad' }
    ];

    const defaultConfig = {
      chart_title: 'U.S. Unemployment Rate (1929-1943)',
      x_axis_label: 'Year',
      y_axis_label: 'Unemployment Rate (%)',
      background_color: '#0f172a',
      surface_color: '#1e293b',
      text_color: '#f8fafc',
      primary_action_color: '#ef4444',
      secondary_action_color: '#94a3b8',
      font_family: 'DM Sans',
      font_size: 16
    };

    let config = { ...defaultConfig };

    // Calculate positions for data points
    const minValue = 0;
    const maxValue = 25;
    const chartWidth = 790;
    const chartHeight = 300;
    const startX = 60;
    const startY = 350;
    const stepX = chartWidth / (chartData.length - 1);

    function valueToY(value) {
      return startY - ((value / maxValue) * chartHeight);
    }

    // Build the chart
    function buildChart() {
      const chartLine = document.getElementById('chart-line');
      const areaPath = document.getElementById('area-path');
      const dataPointsGroup = document.getElementById('data-points');
      const xAxisLabels = document.getElementById('x-axis-labels');
      
      let linePath = '';
      let areaPathStr = '';
      
      chartData.forEach((point, index) => {
        const x = startX + (index * stepX);
        const y = valueToY(point.value);
        
        if (index === 0) {
          linePath = `M ${x} ${y}`;
          areaPathStr = `M ${x} ${startY} L ${x} ${y}`;
        } else {
          linePath += ` L ${x} ${y}`;
          areaPathStr += ` L ${x} ${y}`;
        }
        
        // Create data point
        const pointGroup = document.createElementNS('http://www.w3.org/2000/svg', 'g');
        pointGroup.classList.add('data-point');
        pointGroup.style.animationDelay = `${0.3 + (index * 0.1)}s`;
        pointGroup.dataset.year = point.year;
        pointGroup.dataset.value = point.value;
        pointGroup.dataset.event = point.event;
        
        const outerCircle = document.createElementNS('http://www.w3.org/2000/svg', 'circle');
        outerCircle.setAttribute('cx', x);
        outerCircle.setAttribute('cy', y);
        outerCircle.setAttribute('r', '6');
        outerCircle.setAttribute('fill', '#1e293b');
        outerCircle.setAttribute('stroke', '#6366f1');
        outerCircle.setAttribute('stroke-width', '2');
        
        const innerCircle = document.createElementNS('http://www.w3.org/2000/svg', 'circle');
        innerCircle.setAttribute('cx', x);
        innerCircle.setAttribute('cy', y);
        innerCircle.setAttribute('r', '3');
        innerCircle.setAttribute('fill', '#6366f1');
        
        pointGroup.appendChild(outerCircle);
        pointGroup.appendChild(innerCircle);
        dataPointsGroup.appendChild(pointGroup);
        
        // Add X-axis label (show every other year to avoid crowding)
        if (index % 1 === 0) {
          const label = document.createElementNS('http://www.w3.org/2000/svg', 'text');
          label.setAttribute('x', x);
          label.setAttribute('y', 375);
          label.setAttribute('text-anchor', 'middle');
          label.textContent = point.year;
          xAxisLabels.appendChild(label);
        }
      });
      
      // Close the area path
      const lastX = startX + ((chartData.length - 1) * stepX);
      areaPathStr += ` L ${lastX} ${startY} Z`;
      
      chartLine.setAttribute('d', linePath);
      areaPath.setAttribute('d', areaPathStr);
      
      // Add tooltip interactions
      setupTooltips();
    }

    function setupTooltips() {
      const tooltip = document.getElementById('tooltip');
      const tooltipYear = document.getElementById('tooltip-year');
      const tooltipValue = document.getElementById('tooltip-value');
      const tooltipEvent = document.getElementById('tooltip-event');
      const dataPoints = document.querySelectorAll('.data-point');

      dataPoints.forEach(point => {
        point.addEventListener('mouseenter', (e) => {
          const year = point.dataset.year;
          const value = point.dataset.value;
          const event = point.dataset.event;
          
          tooltipYear.textContent = year;
          tooltipValue.textContent = `${value}%`;
          tooltipEvent.textContent = event;
          tooltip.classList.add('visible');
          
          const outerCircle = point.querySelector('circle:first-child');
          const innerCircle = point.querySelector('circle:last-child');
          outerCircle.setAttribute('r', '8');
          innerCircle.setAttribute('r', '4');
        });

        point.addEventListener('mousemove', (e) => {
          tooltip.style.left = `${e.clientX + 15}px`;
          tooltip.style.top = `${e.clientY - 10}px`;
        });

        point.addEventListener('mouseleave', () => {
          tooltip.classList.remove('visible');
          const outerCircle = point.querySelector('circle:first-child');
          const innerCircle = point.querySelector('circle:last-child');
          outerCircle.setAttribute('r', '6');
          innerCircle.setAttribute('r', '3');
        });
      });
    }

    async function onConfigChange(cfg) {
      const chartTitle = document.getElementById('chart-title');
      const xAxisLabel = document.getElementById('x-axis-label');
      const yAxisLabel = document.getElementById('y-axis-label');
      const appContainer = document.getElementById('app-container');

      chartTitle.textContent = cfg.chart_title || defaultConfig.chart_title;
      xAxisLabel.textContent = cfg.x_axis_label || defaultConfig.x_axis_label;
      yAxisLabel.textContent = cfg.y_axis_label || defaultConfig.y_axis_label;

      const bgColor = cfg.background_color || defaultConfig.background_color;
      const surfaceColor = cfg.surface_color || defaultConfig.surface_color;
      const textColor = cfg.text_color || defaultConfig.text_color;
      const secondaryColor = cfg.secondary_action_color || defaultConfig.secondary_action_color;

      appContainer.style.background = `linear-gradient(135deg, ${bgColor} 0%, ${surfaceColor} 100%)`;
      chartTitle.style.color = textColor;
      xAxisLabel.style.color = secondaryColor;
      yAxisLabel.style.color = secondaryColor;

      const fontFamily = cfg.font_family || defaultConfig.font_family;
      const fontSize = cfg.font_size || defaultConfig.font_size;
      const baseFontStack = 'sans-serif';
      
      document.body.style.fontFamily = `${fontFamily}, ${baseFontStack}`;
      chartTitle.style.fontSize = `${fontSize * 1.5}px`;
      xAxisLabel.style.fontSize = `${fontSize * 0.875}px`;
      yAxisLabel.style.fontSize = `${fontSize * 0.875}px`;
    }

    function mapToCapabilities(cfg) {
      return {
        recolorables: [
          {
            get: () => cfg.background_color || defaultConfig.background_color,
            set: (value) => { cfg.background_color = value; window.elementSdk.setConfig({ background_color: value }); }
          },
          {
            get: () => cfg.surface_color || defaultConfig.surface_color,
            set: (value) => { cfg.surface_color = value; window.elementSdk.setConfig({ surface_color: value }); }
          },
          {
            get: () => cfg.text_color || defaultConfig.text_color,
            set: (value) => { cfg.text_color = value; window.elementSdk.setConfig({ text_color: value }); }
          },
          {
            get: () => cfg.primary_action_color || defaultConfig.primary_action_color,
            set: (value) => { cfg.primary_action_color = value; window.elementSdk.setConfig({ primary_action_color: value }); }
          },
          {
            get: () => cfg.secondary_action_color || defaultConfig.secondary_action_color,
            set: (value) => { cfg.secondary_action_color = value; window.elementSdk.setConfig({ secondary_action_color: value }); }
          }
        ],
        borderables: [],
        fontEditable: {
          get: () => cfg.font_family || defaultConfig.font_family,
          set: (value) => { cfg.font_family = value; window.elementSdk.setConfig({ font_family: value }); }
        },
        fontSizeable: {
          get: () => cfg.font_size || defaultConfig.font_size,
          set: (value) => { cfg.font_size = value; window.elementSdk.setConfig({ font_size: value }); }
        }
      };
    }

    function mapToEditPanelValues(cfg) {
      return new Map([
        ['chart_title', cfg.chart_title || defaultConfig.chart_title],
        ['x_axis_label', cfg.x_axis_label || defaultConfig.x_axis_label],
        ['y_axis_label', cfg.y_axis_label || defaultConfig.y_axis_label]
      ]);
    }

    // Build the chart on load
    buildChart();

    // Initialize SDK
    if (window.elementSdk) {
      window.elementSdk.init({
        defaultConfig,
        onConfigChange,
        mapToCapabilities,
        mapToEditPanelValues
      });
      config = window.elementSdk.config || config;
      onConfigChange(config);
    } else {
      onConfigChange(config);
    }
  </script>
