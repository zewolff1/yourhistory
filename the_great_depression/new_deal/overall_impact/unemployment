    <div id="tooltip" class="tooltip fixed rounded-lg text-sm shadow-xl border" style="background-color: #1e293b; color: #f8fafc; border-color: #6366f1; padding: 12px;">
     <div id="tooltip-year" class="font-semibold" style="color: #a5b4fc;"></div>
     <div id="tooltip-value" class="text-lg font-bold mb-1"></div>
     <div id="tooltip-event" class="text-xs" style="color: #cbd5e1; max-width: 200px;"></div>
