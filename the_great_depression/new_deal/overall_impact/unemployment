        <line x1="60" y1="170" x2="850" y2="170" class="grid-line" stroke="#334155" stroke-width="1" />
        <line x1="60" y1="230" x2="850" y2="230" class="grid-line" stroke="#334155" stroke-width="1" />
        <line x1="60" y1="290" x2="850" y2="290" class="grid-line" stroke="#334155" stroke-width="1" />
        <line x1="60" y1="350" x2="850" y2="350" class="grid-line" stroke="#334155" stroke-width="1" />
       </g> <!-- Y-Axis Values --> <g class="y-axis-values" fill="#94a3b8" font-size="12" font-weight="500">
